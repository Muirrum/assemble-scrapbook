generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Account {
  id        String      @id @default(cuid())
  email     String      @unique(map: "Accounts.email_unique")
  username  String      @unique(map: "Accounts.username_unique")
  cssURL    String?
  stream    String?
  website   String?
  github    String?
  pronouns  String?
  updates   Updates[]
  reactions Reactions[]
  tokens    Token[]
}

model Updates {
  id            String      @id @default(cuid())
  postTime      DateTime?   @default(now())
  text          String?
  attachments   String[]
  isShip        Boolean?    @default(false)
  Accounts      Account?    @relation(references: [id], fields: [accountID])
  accountID     String?
  postNumber    Int         @default(autoincrement())
  claps         Int         @default(0)
  collaborators String[]
  reactions     Reactions[]
}

model Reactions {
  id        String   @id @default(cuid())
  cookie    String
  emoji     String[]
  updateId  String
  update    Updates  @relation(references: [id], fields: [updateId])
}

model Token {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  userEmail String
  user      Account  @relation(fields: [userEmail], references: [email])
}
